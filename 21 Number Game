import random

numbers = 1
moves = []

def user():
    while True:
        try:
            enter = int(input("Number of inputs do you wish to enter (1â€“3): "))
            if 1 <= enter <= 3:
                return enter
            else:
                print("Enter a number between 1 and 3.")
        except ValueError:
            print("Enter a valid number.")

def first():
    global numbers
    for _ in range(user()):
        moves.append(numbers)
        if numbers == 21:
            lost()
            return
        numbers += 1
    print("Numbers so far:", moves)
    second()

def second():
    global numbers
    gen = random.randint(1, 3)
    print(f"Computer chooses {gen} numbers")

    for _ in range(gen):
        moves.append(numbers)
        if numbers == 21:
            won()
            return
        numbers += 1
    print("Numbers so far:", moves)
    first()

def lost():
    print("Numbers:", moves)
    print("...BAD LUCK...!!!")
    print("...YOU LOST!...ğŸ’¥")

def won():
    print("Numbers:", moves)
    print("...CONGRATULATIONS...!!!")
    print("...YOU WON!ğŸ†...")


print("...WELCOME__TO__21__NUMBER__GAME...")
start = input("Do you want to start the GAME? (yes/no): ").lower()

if start == "yes":
    select = input("Select 'F' to start first or 'S' to start second: ").lower()
    if select == "f":
        first()
    else:
        second()
else:
    print("You decided not to start game.ğŸ‘‹")
